<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.msjtrs.ing_app.ui.CommentViewModel"/>
        <variable
            name="post"
            type="com.msjtrs.ing_app.domain.PostProperty"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/comment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:fontFamily="@font/roboto"
            android:scaleType="centerCrop"
            android:text="@{`Name: ` + viewModel.selectedProperty.commentName}"
            android:textSize="16sp"
            tools:text="@string/user_username" />

        <TextView
            android:id="@+id/comment_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:fontFamily="@font/roboto"
            android:scaleType="centerCrop"
            android:text="@{`Email: ` + viewModel.selectedProperty.commentEmail}"
            android:textSize="16sp"
            tools:text="@string/user_username" />

        <TextView
            android:id="@+id/comment_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:fontFamily="@font/roboto"
            android:scaleType="centerCrop"
            android:text="@{`Body: ` + viewModel.selectedProperty.commentBody}"
            android:textSize="16sp"
            tools:text="@string/user_username" />


    </LinearLayout>

</layout>